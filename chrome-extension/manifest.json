{
    "manifest_version": 3,
    "name": "YouTube Sentiment Analyzer",
    "version": "1.0.0",
    "description": "Analyse automatique du sentiment des commentaires YouTube",
    
    "permissions": [
      "activeTab",
      "storage"
    ],
    
    "host_permissions": [
      "https://www.youtube.com/*",
      "http://localhost:8000/*",
      "https://*.hf.space/*",
      "https://*.cloudspaces.litng.ai/*" 
    ],
    
    "action": {
      "default_popup": "popup.html",
      "default_title": "Analyser les commentaires"
    },
    
    "content_scripts": [
  {
    "matches": [
      "https://www.youtube.com/watch*",
      "https://m.youtube.com/watch*",
      "https://youtube.com/watch*"
    ],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
],
    
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  